<section role="tabpanel" class="tab-pane" id="join">
  <h1> Join your friends </h1>
  <% @cleans.reverse_each do |post| %>
  <hr>
  <div class="post"> 
    <%= post.user.name %>
    <span class="post_location"> &nbsp;&nbsp;<%= post.mark.location %> </span>
    <%= link_to content_tag(:span, '', class: "glyphicon glyphicon-trash"), post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to content_tag(:button, 'Join', class: "btn btn-default btn-xs"), "#" %>
  </div>

  <br />

  <div class="post_content">
    <div> <%= image_tag post.bphoto.url, class: "post_image" %> </div>
    <div class="post_message"><%= post.mark.message %></div>
    <br />

    <%= simple_form_for post, remote: true, class: "form-horizontal" do |f| %>
    <div class="input_grp container-fluid">
      <div class="icon_container col-xs-1">
        <span class="glyphicon glyphicon-camera"></span>
      </div>
      <div class="col-xs-11">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-6"><%= f.input :aphoto, label: "Upload picture" %></div>
          </div>
        </div>
      </div>
    </div>
    <div class="input_grp container-fluid">
      <div class="icon_container col-xs-1">
        <span class="glyphicon glyphicon-comment"></span>
      </div>
      <div class="col-xs-11">
        <%= f.input :message, placeholder: "Description", label: false %>
      </div>
    </div>
    <%= token_tag form_authenticity_token %>
    <%= f.submit "Finish cleaning", class: "btn btn-primary btn-lg", id: "btn-finish" %>
    <% end %>
  </div>
  <% end %>
</section>