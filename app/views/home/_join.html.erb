<section role="tabpanel" class="tab-pane" id="join">
 <h1> Join us </h1>
 <% @marks.reverse_each do |mark| %>
  <hr>
  <div class="user_name"> Kavya <span class="mark_location"> &nbsp;&nbsp;<%= mark.location %> </span><%= link_to content_tag(:span, '', class: "glyphicon glyphicon-trash"),mark, method: :delete, data: { confirm: 'Are you sure?' } %>
     <span class="glyphicon glyphicon-share"</span>
   </div><br />

   <div class="mark_post">
     <div> <%= image_tag mark.photo.url, class: "mark_image" %> </div>
     <div class="mark_message"><%= mark.message %></div>
   </div>
  
  <!-- <div> <%= link_to("delete", mark_path(mark) ,method: :delete) %> </div> -->

  
 <% end %>
  </section>