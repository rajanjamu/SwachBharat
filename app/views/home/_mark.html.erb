<section role="tabpanel" class="tab-pane active" id="mark">
  
<%= form_for @mark do |f| %>
  <div class="form-group">
    <label for="location">Location</label>
    <%= f.text_field :location, class: "form-control", placeholder: "Area/Place, City" %>
  </div>
        
  <div class="form-group">
    <label for="beforeImage">Before pic</label>
    <%= f.file_field :photo %>
  </div>

  <div class="form-group">
    <label for="message">Message</label>
    <textarea class="form-control" rows="3"></textarea>
  </div>
  
  <%= f.submit "Submit", class: "btn btn-default"%>

<% end %>
</section>

<% @marks.reverse_each do |mark| %>
	<hr>
	<div class="name"> Kavya <span class="location"> &nbsp;&nbsp;<%= mark.location %> </span></div><br />
	<div> <%= image_tag mark.photo.url, class: "image" %> </div>
	<!-- <div> <%= link_to("delete", mark_path(mark) ,method: :delete) %> </div> -->
<% end %>