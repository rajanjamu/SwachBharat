<section role="tabpanel" class="tab-pane" id="share">

<%= form_for @clean do |f| %>
  
  <div class="form-group">
    

    <label for="location">
      Location</label>
    <%= f.text_field :location, class: "form-control", placeholder: "Area/Place, City" %>
  </div>
        
  <div class="form-group">
    <label for="beforeImage">Before pic</label>
    <%= f.file_field :bphoto  %>
  </div>
  
  <div class="form-group">
    <label for="afterImage">After pic</label>
    <%= f.file_field :aphoto %>
  </div>

  <div class="form-group">
    <label for="message">Message</label>
    
    <%= f.text_field :message, class: "form-control", placeholder: "share your experiences..."  %>
  </div>

  <% f.submit "Submit", class: "btn btn-default" %>

  <% end %>
  
  

</section>



